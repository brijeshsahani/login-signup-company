<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ProfileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Details"
        android:textSize="35sp"
        android:textStyle="bold"
        android:background="#FCA311"
        android:layout_gravity="center"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bgprofile1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dddq"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_below="@id/profile"

            >
            <TextView
                android:id="@+id/txtFirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fname"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:layout_marginLeft="145dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                />
            <TextView
                android:id="@+id/txtLastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lname"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_bg_text"
        >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="80dp"

            />
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="bksahani@gmail.com"
            android:layout_marginTop="9dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_dob"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="80dp"

            />
        <TextView
            android:id="@+id/txtBirthdate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="04-03-1998"
            android:layout_marginTop="9dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_gender"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="80dp"

            />
        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Male"
            android:layout_marginTop="9dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_mobile"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="80dp"

            />
        <TextView
            android:id="@+id/txtMobileno"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9824113729"
            android:layout_marginTop="9dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_home"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="80dp"

            />
        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="246 Rushi Nagar Soc,kmdvndsvsmdvdjv jds vj sdv sdv"
            android:layout_marginTop="9dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="Back To Home"

        app:backgroundTint="#FCA311" />
</LinearLayout>







